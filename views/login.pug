extends layout.pug



block content
 if messageFailure
  div.alert.alert-danger=messageFailure
 h3.pl-4.ml-4 Login
 if errors
  each error in errors
   div.alert.alert-danger.m-4 #{error}
 form(method="post" action="/login")
   .form-group
     label(for='username') Email address
     input#exampleInputEmail1.form-control(type='email' name="username" aria-describedby='emailHelp' required)
     small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
   .form-group
     label(for='exampleInputPassword1') Password
     input#exampleInputPassword1.form-control(type='password' name="password" required)
   .form-group.form-check
     input#exampleCheck1.form-check-input(type='checkbox')
     label.form-check-label(for='exampleCheck1') Check me out
   button.btn.btn-primary(type='submit') Submit
   a.container(href="/register") Register